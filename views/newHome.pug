    <script>
        // Real-time data simulation
        function updatePrices() {
            const stocks = document.querySelectorAll('.stock-row');
            stocks.forEach(stock => {
                const priceElement = stock.children[1];
                const changeElement = stock.children[2];
                
                const currentPrice = parseFloat(priceElement.textContent.replace('$', ''));
                const change = (Math.random() - 0.5) * 2; // Random change between -1 and 1
                const newPrice = currentPrice + change;
                const percentChange = (change / currentPrice) * 100;
                
                priceElement.textContent = `$${newPrice.toFixed(2)}`;
                changeElement.textContent = `${percentChange > 0 ? '+' : ''}${percentChange.toFixed(2)}%`;
                changeElement.className = percentChange > 0 ? 'positive' : 'negative';
            });
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Hover effects for stock rows
        document.querySelectorAll('.stock-row').forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.background = 'rgba(0, 212, 255, 0.05)';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.background = 'transparent';
            });
        });

        // Simulate real-time updates every 3 seconds
        setInterval(updatePrices, 3000);

        // Add loading animation on page load
        window.addEventListener('load', function() {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.5s ease';
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });
    </script>
