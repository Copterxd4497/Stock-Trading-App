doctype html
html
    head
        title Stock Trading App - Home
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
    body
        header
            h1 Welcome to the Stock Trading App
        .center-container
            .auth-links
                a(href="#") Login
                |  or
                a(href="#") Register
            .split-container
                .form-section
                    form(id="searchForm")
                        input(type="text", name="search", placeholder="Search by name")
                        select(name="category")
                            option(value="") All Categories
                            option(value="book") Book
                            option(value="electronics") Electronics
                        button(type="submit") Search
                    ul#productList
                        // Products will be inserted here
                .stock-section
                    if typeof homeStock !== 'undefined' && homeStock.length
                        ul 
                            each stock in homeStock 
                                li
                                    span.stock-initials #{stock.initials}
                                    |  - 
                                    span.stock-name #{stock.full_name}
                    else 
                        p No stocks found.
        footer
            p &copy; #{new Date().getFullYear()} Stock Trading App
            script(src='/js/script.js', defer)